<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333F68"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/add_subplan_title_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="title"
        android:textColor="#FFF"
        android:textColorHint="#8F97B7"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/add_subplan_percent_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/add_subplan_title_edit"
        android:hint="percent"
        android:inputType="number"
        android:textColor="#FFF"
        android:textColorHint="#8F97B7"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/add_subplan_summary_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_subplan_ok_button"
        android:layout_below="@+id/add_subplan_percent_edit"
        android:gravity="top"
        android:hint="summary"
        android:textColor="#FFF"
        android:textColorHint="#8F97B7"
        android:textSize="20sp" >
    </EditText>

    <Button
        android:id="@+id/add_subplan_ok_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#26AAAE"
        android:text="OK"
        android:textColor="#FFF" />

</RelativeLayout>